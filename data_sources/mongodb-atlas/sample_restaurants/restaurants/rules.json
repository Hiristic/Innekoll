{
    "collection": "restaurants",
    "database": "sample_restaurants",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "Dado": "%%user.id"
            },
            "fields": {
                "Grades": {}
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "Users",
            "apply_when": {
                "%%user.data.email": {
                    "%exists": true
                }
            },
            "fields": {
                "Grades": {}
            },
            "write": true,
            "insert": true,
            "delete": false,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "non-owner",
            "apply_when": {},
            "fields": {
                "Grades": {}
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
